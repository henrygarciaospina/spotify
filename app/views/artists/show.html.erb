<div class="container"> 
  <div class="row">
    <div class="panel-body"> 
      <div class="col-sm-7">
        <div class="row">  
          <h1><%= @artist.name %></h1>
          <h3><strong>Albums </strong>(<%= @artist.albums.count %>)</h3>
          <% @artist.albums.each do |album| %>
            <div class="col-sm-3">
              <div class="image-responsive thumbnail" align="center">
              <%= image_tag(album.image_url, :class => "album") %>
              <div class="album_name"><%= album.name %></div>
              <div><%= album.released_at.strftime "%Y" %></div>
            </div>
            </div>
          <% end %>  
        </div>
      </div>
      <div class="col-sm-5">
       <div class="image-artist">
        <div class="image-responsive">
            <%= image_tag(@artist.image_url, :class => "photo") %>
        </div>
       </div>  
      </div>
    </div>
  </div>
</div>