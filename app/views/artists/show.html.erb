<div class="container">
  <div class="row">
    <div class="panel-body">
      <div class="col-sm-7">
        <div class="row">
          <h1><%= @artist.name %></h1>
          <h3><strong>Albums </strong>(<%= @artist.albums.count %>)</h3>
          <% @artist.albums.each do |album| %>
            <div class="col-sm-3">
              <div class="image-responsive thumbnail" align="center" style="height: 255px;">
              <%= image_tag(album.image_url, :class => "album") %>
              <div class="album_name"><%= album.name %></div>
              <p><%= l album.released_at, format: '%Y' if album.released_at %></p>
            </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-4 col-sm-offset-1">
        <img src="<%= @artist.image_url %>" alt="<%= @artist.name %>" class="pull-right img-responsive img-rounded">
      </div>
    </div>
  </div>
</div>
